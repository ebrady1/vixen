<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:System.Windows.Controls.WpfPropertyGrid.Controls">

	<Style TargetType="{x:Type controls:DoubleEditor}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type controls:DoubleEditor}">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="2*" />
							<ColumnDefinition Width="8*" />
						</Grid.ColumnDefinitions>
						<TextBox x:Name="PART_editor" Grid.Column="0" Grid.ColumnSpan="2"
						         Text="{Binding Path=Value, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" />
						<Rectangle Grid.Column="1" x:Name="PART_dragger" Stroke="Transparent" Fill="Transparent" />
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True" SourceName="PART_dragger">
							<Setter Property="Cursor" Value="SizeAll" />
						</Trigger>
						<Trigger Property="IsDragging" Value="True">
							<Setter Property="Cursor" Value="SizeAll" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>